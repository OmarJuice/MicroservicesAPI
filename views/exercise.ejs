<% include partials/header %>


<h1 class="title has-text-centered">
    Exercise Tracker
</h1>
<div class="has-text-centered">
    <form class="form" action="/api/exercise/new-user" method="post">
        <div class="field">
            <label for="" class="label">Enter a username:</label>
            <div class="control has-text-centered">
                <input class="input" type="text" name="username" placeholder="username">
            </div>
        </div>
        <div class="field">
            <p class="control has-text-centered">
                <button class="button is-small is-primary">
                    Submit
                </button>
            </p>
        </div>
    </form>
    <hr>
    <form action="/api/exercise/add" class="form" method="post">
        <div class="field">
            <label for="" class="label">Log an exercise:</label>
            <div class="control has-text-centered">
                <input  class="input" type="text" name="userId" placeholder="userId">
            </div>
        </div>
        <div class="field">
            
            <div class="control has-text-centered">
                <input  class="input" type="text" name="exercise[description]" placeholder="description">
            </div>
        </div>
        <div class="field">
            <div class="control has-text-centered">
                <input  class="input" type="text" name="exercise[duration]" placeholder="duration">
            </div>
        </div>
        <div class="field">
            
            <div class="control has-text-centered">
                <input  class="input" type="text" name="exercise[date]" placeholder="date: yyyy-mm-dd">
            </div>
        </div>
        <div class="field">
            <p class="control has-text-centered">
                <button class="button is-small is-primary">
                    Submit
                </button>
            </p>
        </div>
    </form>
    <hr>
    <p class="content is-size-5">
        <strong>POST:(User) </strong>  <em> /api/exercise/new-user</em>
        <br>
        <strong>POST:(Exercise) </strong>  <em> /api/exercise/add</em>
        <br>
        <strong>GET:(Users) </strong>   <em> <a href="/api/exercise/users">/api/exercise/users</a></em>
        <br>
        <strong>GET:(Log) </strong>   <em> /api/exercise/log/?{userId}&(from)&(to)&(limit)</em>
        date format: yyyy-mm-dd

    </p>
</div>


<% include partials/footer %>